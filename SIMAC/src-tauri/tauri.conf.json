{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "simac",
  "version": "0.1.0",
  "identifier": "coboce",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "simac",
        "label": "main",
        "url": "http://localhost:1420",
        "width": 1400,
        "height": 900,
        "resizable": false,
        "fullscreen": false,
        "title": "Sistema de Control de Mantenimiento Coboce",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
